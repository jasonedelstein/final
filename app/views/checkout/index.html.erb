<style>
  .control-label { text-align: left !important;}
</style>

<h1>Item Circulation</h1>

<% if @item.errors.any? %>
<p>
    <%@item.errors.each do |attribute, message| %>
	<%= attribute %> : <%= message %>.
	<br />
	<% end %>
</p>
<% end %>

<h2>Check out an item</h2>

<%= form_tag({:action => 'create', :controller => 'checkout'}, {:class => 'form-horizontal'}) do %>

  <div class="form-group">
    <label class="col-sm-2 control-label">Email:</label>
    <div class="col-sm-5">
		<input type="text" class="form-control" name="email" size="30">
	</div>
  </div>
  
   <div class="form-group">
    <label class="col-sm-2 control-label">Item barcode:</label>
    <div class="col-sm-5">
		<input type="text" class="form-control" name="barcode" size="30">
	</div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
		<input type="submit" value="Process check-out" class="btn btn-default">
	</div>
  </div>
<% end %>

<h2>Check in an item</h2>

<%= form_tag checkout_path, method: :delete, :class => 'form-horizontal' do %>
  
   <div class="form-group">
			<label class="col-sm-2 control-label">Item barcode:</label>
			<div class="col-sm-5">
				<input class="form-control" type="text" name="barcode" size="30">
			</div>
	</div>
	
  <div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<input class="btn btn-default" type="submit" value="Process check-in">
		</div>
	</div>
	
<% end %>