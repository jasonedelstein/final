<h1>Edit your account details</h1>

<% if @user.errors.any? %>
<p>
    <%@user.errors.each do |attribute, message| %>
	<%= attribute %> : <%= message %>.
	<br />
	<% end %>
</p>
<% end %>

<%= form_tag "/users/#{@user.id}", :method => "patch" do %>

  <div>
    <label>First name:</label>
    <input type="text" name="first_name" value="<%= @user.first_name %>" size="30">
  </div>
  
   <div>
    <label>Last name:</label>
    <input type="text" name="last_name" value="<%= @user.last_name %>" size="30">
  </div>
  
  <div>
    <label>New password:</label>
    <input type="password" name="password" size="30">
  </div>
  
   <div>
    <label>New password confirmation:</label>
    <input type="password" name="password_confirmation" size="30">
  </div>

  <input type="submit" value="Update">

<% end %>