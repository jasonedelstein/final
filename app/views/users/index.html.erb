<div class="page-header">
  <h1>User Accounts - Admin Listing</h1>
</div>

<%= paginate @users %>

<table class="table table-striped">
  <thead>
    <tr>
      <td>Name</td>
      <td>Email address</td>
      <td>Created on</td>
	  <td>Admin?</td>
	  <td>Toggle admin?</td>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to "#{user.fullname}", "/users/#{user.id}" %></td>
        <td><%= user.email %></td>
        <td><%= user.created_on.to_formatted_s(:long_ordinal) %></td>
		<td><%= user.admin %></td>
		<td><%= link_to "x", "/users/promote/#{user.id}", :method => "patch", data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
