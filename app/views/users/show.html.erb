<div class="page-header">
  <%= link_to "Edit", edit_user_path(@user.id), class: 'btn btn-md btn-primary pull-right' %>
  <h1>My Account</h1>
</div>


<p>
  <strong>Name:</strong> <%= @user.fullname %>
</p>

<p>
  <strong>Email address on file:</strong> <%= @user.email %>
</p>

<div>

<p>Items you have currently borrowed:</p>

<% @items = @user.items %>
<% @items = @items.page(params[:page]).per(4) %>

<%= paginate @items %>

<table class="pretty">
  <tr>
    <th><%= sortable "name" %></th>
    <th><%= sortable "barcode" %></th>
  </tr>
  <% for item in @items %>
    <tr>
      <td><%= link_to item.name, "/item/#{item.id}" %></td>
      <td><%= item.barcode %></td>
    </tr>
  <% end %>
</table>